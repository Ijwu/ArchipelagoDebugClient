<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:ArchipelagoDebugClient.ViewModels"
             xmlns:data="using:ArchipelagoDebugClient.ViewModels.DesignData"
             xmlns:behaviors="using:ArchipelagoDebugClient.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ArchipelagoDebugClient.Views.LogView"
             x:DataType="vm:MessageLogViewModel">
    <Design.DataContext>
        <data:MessageLogDesignData/>
    </Design.DataContext>
	<Grid RowDefinitions="*, Auto" ColumnDefinitions="*, Auto">
		<ScrollViewer Name="ScrollArea" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
			<Interaction.Behaviors>
				<behaviors:LogScrollBehavior/>
			</Interaction.Behaviors>
			<ItemsControl ItemsSource="{Binding Messages}">
				<ItemsControl.ItemsPanel>
					<ItemsPanelTemplate>
						<VirtualizingStackPanel/>
					</ItemsPanelTemplate>
				</ItemsControl.ItemsPanel>
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<TextBlock FontSize="16" TextWrapping="Wrap" Margin="2.5" Inlines="{Binding Converter={StaticResource LogMessageConverter}}"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
		</ScrollViewer>
		<TextBox Grid.Row="1" Grid.Column="0" Margin="5" Text="{Binding ChatMessage}">
			<TextBox.KeyBindings>
				<KeyBinding Gesture="Enter" Command="{Binding SendMessageCommand}"/>
			</TextBox.KeyBindings>
		</TextBox>
		<Button Grid.Row="1" Grid.Column="1" Margin="5" Command="{Binding SendMessageCommand}">Send Message</Button>
	</Grid>
</UserControl>
